@inject FitnessDataService DataService

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Client list</h4>
    <table class="table table-hover">
      <thead>
        <th>Name</th>
        <th>Barcode</th>
        <th>Actions</th>
      </thead>
      <tbody>
        @foreach (var client in Clients)
        {
          <tr data-toggle="collapse" class="clickable" onclick="document.getElementById('client_@(client.Id)_detail').classList.toggle('collapse');">
            <td>@client.Name</td>
            <td>@client.Barcode</td>
            <td>TODO</td>
          </tr>
          <tr>
            <td class="p-0" colspan="3">
              <div id="client_@(client.Id)_detail" class="collapse m-3">
                TODO DEATILS
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

@code {

  public List<Client> Clients { get; set; } = new List<Client>();

  protected override async void OnInitialized()
  {
    this.Clients = await DataService.GetClientsAsync();
    StateHasChanged();
  }
}